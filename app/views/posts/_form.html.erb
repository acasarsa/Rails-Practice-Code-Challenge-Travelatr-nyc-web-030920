<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    ERROR: <%= error %><br>
  <% end %>
<% end %>

<br>

<%=form_for @post do |f|%>
    Title: <%= f.text_field :title %><br><br>
    Content: <%= f.text_area :content %><br><br>
    Select Blogger: <%=  f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true%><br><br>
    Select Destination <%=  f.collection_select :destination_id, Destination.all,:id,:name, prompt: true%><br><br>
    <%= f.submit %>

  <% end %>